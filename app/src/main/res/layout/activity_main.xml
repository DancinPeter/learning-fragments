<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bg_orange"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/android_green"
            android:gravity="center"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/fragment_green"
            android:textSize="@dimen/font_button" />

        <TextView
            android:id="@+id/tv_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/android_blue"
            android:gravity="center"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/fragment_blue"
            android:textSize="@dimen/font_button" />

        <TextView
            android:id="@+id/tv_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:background="@color/android_red"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/fragment_red"
            android:textSize="@dimen/font_button" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bg_purple" />

</LinearLayout>
